<?xml version="1.0"?>
<project name="TestData" default="build" basedir=".">

  <target name="build">
    <csc target="library" 
        output="${current.build.dir}/test-assembly.dll"
        debug="${build.debug}" 
        define="${build.defines}">
      <sources basedir=".">
        <include name="*.cs"/>
      </sources>
      <references basedir="${current.build.dir}">
        <include name="nunit.framework.dll"/>
        <include name="nunit.interfaces.dll"/>
      </references>
    </csc>
  </target>

  <target name="package">
    <copy todir="${package.src.dir}/test-assembly">
      <fileset>
        <include name="*.cs"/>
        <include name="test-assembly.build"/>
      </fileset>
    </copy>
  </target>

</project>